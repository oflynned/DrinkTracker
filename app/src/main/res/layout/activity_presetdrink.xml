<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentPresetDrink"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange500">

    <LinearLayout
        android:id="@+id/drink_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlePresetDrink"
            style="?android:textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:paddingLeft="15dp"
            android:text="Preset Drink" />

        <View
            android:id="@+id/PDline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/dt_black" />

        <LinearLayout
            android:id="@+id/drinkDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/displayDrink">

                <ImageView
                    android:id="@+id/presetDrink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_launcher"
                    android:layout_margin="10dp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/drinkChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/drinkPresetChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="Please choose a drink:" />

                <Spinner
                    android:layout_below="@id/drinkPresetChoice"
                    android:id="@+id/spinnerPresetDrink"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/drinks" />


            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
        <Button
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/presetSetPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Set Percentage"
            android:background="@color/orange700" />

        <Button
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/presetSetVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Set Volume"
            android:background="@color/orange700"
            android:layout_toRightOf="@+id/presetSetPercentage"
            android:layout_toEndOf="@+id/presetSetPercentage" />

        <Button
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/presetAddDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Drink!"
            android:background="@color/orange700"
            android:layout_toRightOf="@+id/presetSetVolume"
            android:layout_toEndOf="@+id/presetSetVolume" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>