<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentPresetDrink"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange500">

    <LinearLayout
        android:background="@color/orange500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="?android:textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="Choose Drink" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Database"
            android:id="@+id/btnDatabase"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/orange700"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/btnGraphs"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/orange700"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add db member"
            android:id="@+id/btnAddDBMember"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/orange700" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invoke\nvibration"
            android:id="@+id/btnVibrate"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/orange700" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invoke\ndialogue"
            android:id="@+id/btnDialogue"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/orange700" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invoke Push\nNotification"
            android:id="@+id/btnPushNot"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/orange700" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:id="@+id/btnStats"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:background = "@drawable/roundedbutton"
            android:backgroundTint="@color/orange700" />

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placeholder text for explaining where swiping left and right will take you to.\n\n\nHere's another line for lols with a sample stock image below." />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/swipe_arrow" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
