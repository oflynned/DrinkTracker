<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/orange700</item>
        <item name="android:navigationBarColor">@color/orange700</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:colorEdgeEffect">@color/orange700</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarTabBarStyle">@style/TabStyle</item>
        <item name="colorPrimary">@color/orange500</item>
        <item name="actionBarTabBarStyle">@style/TabBar</item>
    </style>

    <style name="GlassByte" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimaryDark">@color/lightblue300</item>
        <item name="android:navigationBarColor">@color/lightblue700</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:colorEdgeEffect">@color/blue900</item>
    </style>

    <style name="TransparentFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange500</item>
    </style>

    <style name="TabStyle" parent="@style/AppTheme">
        <item name="android:background">@color/orange500</item>
        <item name="background">@color/orange900</item>
    </style>

    <style name="TabBar" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@color/orange500</item>
        <item name="background">@color/orange900</item>
    </style>

    <style name="SplashScreen">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>

    <style name="TranslucentActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>